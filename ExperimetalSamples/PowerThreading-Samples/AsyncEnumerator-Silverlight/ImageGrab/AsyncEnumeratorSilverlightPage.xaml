<UserControl x:Class="ImageGrab.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="300" Height="200">
    <Grid x:Name="LayoutRoot" Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Name="GetImages" Click="GetImages_Click" Content="Get Images" Height="20" Width="100"  IsEnabled="True"></Button>
        <Button Grid.Row="0" Grid.Column="1" Name="Cancel" Click="Cancel_Click" Content="Cancel" Height="20" Width="100" IsEnabled="False"></Button>
        <TextBox Grid.Row="1" Grid.Column="0" Name="Result1" Text="" IsReadOnly="True"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="Result2" Text="" IsReadOnly="True"/>
        <Image Grid.Row="2" Grid.Column="0" Stretch="Uniform" Name="Image1"></Image>
        <Image Grid.Row="2" Grid.Column="1" Stretch="Uniform" Name="Image2"></Image>
    </Grid>
</UserControl>
