<Window x:Class="HikClientDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <StackPanel Name="panel1" Margin="10">
            <MediaElement Name="media" ></MediaElement>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Name="btnStart" Content="登陆并开始播放" Margin="30" Click="btnStart_Click" />
            <Button Name="btnStop" Content="停止播放并退出" Margin="30" Click="btnStop_Click"/>

        </StackPanel>
    </Grid>
</Window>
